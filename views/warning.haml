  #timer.col-md-4.col-md-offset-4.scanme{data: {date: "#{(Time.now + 60).strftime('%F %T')}" }}
.row
  .col-md-4.scanme
    %a.btn.btn-primary{:href => "/check_in"} 
      Ride more
  .col-md-4.scanme
    %a.btn.btn-primary{:href => "/check_out"} 
      I'm done
  .col-md-4.scanme
    %a.btn.btn-danger{:href => "/notify_confirm"} 
      Rider Missing
